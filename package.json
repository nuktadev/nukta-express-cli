{
  "name": "nukta-express",
  "version": "1.0.4",
  "description": "A comprehensive Express.js boilerplate generator with TypeScript, MongoDB, and best practices",
  "main": "dist/index.js",
  "bin": {
    "nukta-express": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "mongodb",
    "mongoose",
    "boilerplate",
    "cli",
    "generator",
    "nodejs",
    "api",
    "backend"
  ],
  "author": "Nukta Solutions",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuktadev/nukta-express-cli.git"
  },
  "bugs": {
    "url": "https://github.com/nuktadev/nukta-express-cli/issues"
  },
  "homepage": "https://github.com/nuktadev/nukta-express-cli#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ejs": "^3.1.9",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "validate-npm-package-name": "^1.0.2"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "templates"
  ]
}
